{
  "name": "policy-counter",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/policy-counter/src",
  "projectType": "library",
  "targets": {
    "clean": {},
    "action:build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["pnpm node ./scripts/bundle-vincent-policy/esbuild.js"],
        "cwd": "packages/policy-counter",
        "parallel": false
      }
    },
    "action:only:deploy": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["node scripts/deploy-lit-action.js"],
        "cwd": "{projectRoot}"
      }
    },
    "action:deploy": {
      "executor": "nx:run-commands",
      "dependsOn": ["action:build"],
      "options": {
        "commands": ["node scripts/deploy-lit-action.js"],
        "cwd": "packages/policy-counter"
      }
    },
    "build": {
      "executor": "@nx/js:tsc",
      "dependsOn": ["action:build"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "packages/policy-counter/dist",
        "main": "packages/policy-counter/src/index.ts",
        "tsConfig": "packages/policy-counter/tsconfig.lib.json",
        "assets": [
          "packages/policy-counter/*.md",
          {
            "glob": "**/*",
            "input": "packages/policy-counter/src/generated",
            "output": "src/generated"
          }
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "{projectRoot}/jest.config.js",
        "passWithNoTests": true
      }
    }
  }
}
